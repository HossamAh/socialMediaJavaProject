<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.LoginController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Login" />
    <TextField fx:id="usernameField" promptText="Username" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#onLoginButtonClick" text="Login" />
        <Button onAction="#onRegisterButtonClick" text="Register" />
    </HBox>
   <Label fx:id="errorText" layoutX="81.0" layoutY="30.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textAlignment="CENTER" textFill="#f20d0d">
      <font>
         <Font size="9.0" />
      </font>
   </Label>
</VBox>
