<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.NewsFeedController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <TextArea fx:id="postTextArea" promptText="What's on your mind?" prefRowCount="3" />
    <Button text="Choose Image" onAction="#onChooseImage" />
    <Label fx:id="imageLabel" text="No image selected" />
    <Button text="Post" onAction="#onPost" />
    <ListView fx:id="postsList" />
</VBox>
