<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.SearchController">

    <Label text="Search Users" style="-fx-font-size:16px; -fx-font-weight:bold;" />

    <TextField fx:id="searchField" promptText="Enter username or email"/>

    <Button text="Search" onAction="#handleSearch"/>

    <ListView fx:id="resultsList" prefHeight="300"/>

</VBox>