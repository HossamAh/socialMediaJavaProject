<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo.NotificationController">

    <Label text="Notifications" style="-fx-font-size:16px; -fx-font-weight:bold;" />

    <ListView fx:id="notificationList" prefHeight="300"/>

    <Button text="Mark as Read" onAction="#handleMarkAsRead"/>

</VBox>